{
  "name": "nextium",
  "version": "1.0.0",
  "description": "Local serverless management for Next.js projects with on-demand process management",
  "main": "src/index.js",
  "bin": {
    "nextium": "./bin/cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "service:install": "sudo bash install-service.sh",
    "service:uninstall": "sudo bash uninstall-service.sh",
    "service:status": "node bin/cli.js service status",
    "service:restart": "sudo node bin/cli.js service restart",
    "service:logs": "node bin/cli.js service logs",
    "dev": "sudo node bin/cli.js dev"
  },
  "keywords": [
    "nextjs",
    "serverless",
    "development",
    "local-development",
    "nextium",
    "proxy",
    "on-demand"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "http-proxy": "^1.18.1",
    "inquirer": "^8.2.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nextium.git"
  }
}
